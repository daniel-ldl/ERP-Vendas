@model List<Vendas.Models.Cliente.ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}

<div class="pb-5">
    <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Create">Novo Cliente</a>
</div>

<h6>Clientes</h6>

<div class="text-center table-responsive pt-4">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome Fantasia</th>
                <th scope="col">Razão Social</th>
                <th scope="col">CPF</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
                foreach(Vendas.Models.Cliente.ClienteModel client in Model)
                {
                    <tr>
                        <th scope="row">@client.Id</th>
                        <td>@client.NomeFantasia</td>
                        <td>@client.RazaoSocial</td>
                        <td>@client.CPF</td>
                        <td>@client.Telefone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@client.Id" asp-controller="Cliente" asp-action="Update">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@client.Id" asp-controller="Cliente" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>